<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/windowBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name   "
        android:textStyle="bold"
        android:textColor="@color/grayColor"
        android:id="@+id/tvName" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Age   "
        android:id="@+id/tvAge" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sex   "
        android:id="@+id/tvSex" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level   "
        android:id="@+id/tvLevel" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ant"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"></LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorButton1"
            android:id="@+id/imageButton1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/record"
            android:onClick="onClickRecord"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorButton2"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/clock" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorButton3"
            android:id="@+id/imageButton3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cal" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorButton4"
            android:id="@+id/imageButton4"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/info" />

    </LinearLayout>

</LinearLayout>